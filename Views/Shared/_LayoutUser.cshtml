<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style type="text/css">
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }
        .anhsach{
            max-width: 200px;
            max-height: 250px;
        }

        .imgbook:hover {
            transform: scale(0.9);
            cursor: pointer;
        }

        .imgsachbannhieu {
            width: 100px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("SachOnline", "Index", "SachOnline", new { area = "" }, new { @class = "navbar-brand" })
            </div>


            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between navbar-right">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Trang Chủ", "Index", "SachOnline", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Sách Theo Chủ Đề", "SachTheoChuDe", "SachOnline", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Sách Theo Nhà Xuất Bản", "SachTheoNhaXuatBan", "SachOnline", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Đăng Kí", "DangKy", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Đăng Nhập", "DangNhap", "User", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div style="margin-bottom: 50px;">
                    @Html.Action("ChuDePartial", "SachOnline")
                </div>
                <div>
                    @Html.Action("NhaXuatBanPartial", "SachOnline")
                </div>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
